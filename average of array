#include <stdio.h>

int main() {
    int n, i;
    float sum = 0, average;

    
    printf("Enter the number of elements in the array: ");
    scanf("%d", &n);

    if (n <= 0) {
        printf("Invalid array size.\n");
        return 1;
    }

    float arr[n]; 

  
    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%f", &arr[i]);
        sum += arr[i];
    }

    
    average = sum / n;

    
    printf("Average of the array elements = %.2f\n", average);

    return 0;
}
